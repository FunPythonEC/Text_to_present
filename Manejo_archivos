#Creamos el archivo con el nombre hola.txt
f= open("Hola2.txt","w")
f.close()

#Escribimos en el archivo
f= open("Hola2.txt","w")
f.write("Salduos")
f.close()

#Leemos el archivo
f= open("Hola2.txt","r")
mensaje = f.read()
print(mensaje)
f.close()

#Anexar texto a un archivo existente
f= open("Hola2.txt","a") # se eua el metodo append
f.write(" + agregado")
f.close()
